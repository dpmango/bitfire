doctype html
html
  include shared/head.pug

  body
    include shared/header.pug
    
    // HERO
    .hero
      .container
        .row
          .col-sm-12.text-center
            video(width='100%', height='auto', autoplay='autoplay', loop='loop', preload='auto')
              source(src='video/video.mp4')
              source(src='video/video.webm', type='video/webm')
            .hero__content
              .hero__title Easiest way to mine bitcoin
              .hero__subtitle Register now and get <span>free 100gb/s</span> trial
              .hero__buttons
                a(href='#').btn.btn-cta start mining now !
                .hero__buttons__sep or
                a(href='#').btn.btn-ghost login
            
            a(href='#sectionAbout').hero__down
              i.ico.ico-arrow-down
    
    // ABOUT
    .about#sectionAbout
      .container
        .row
          .col-sm-12.text-center
            .section-title Why should you choose bitfire cloud mining ? 
        .row
          .col-sm-9
            .row
              .col-sm-6
                .about__block
                  .about__block__icon
                    i.ico.ico-about-1
                  .about__block__content
                    .about__block__name Instant setup
                    .about__block__description Mining power will be activated at the moment of contract payment. No need to wait for lenghty hardware delivery
                .about__block
                  .about__block__icon
                    i.ico.ico-about-2
                  .about__block__content
                    .about__block__name Real time statistics
                    .about__block__description Our easy-to-use control panel provides you real-time data about your contract, payments and withdrawals
              .col-sm-6
                .about__block
                  .about__block__icon
                    i.ico.ico-about-3
                  .about__block__content
                    .about__block__name 100% uptime
                    .about__block__description Mine 24/7 without any interruptions! We cover all hardwave failtures, servicing and warranty repairs
                .about__block
                  .about__block__icon
                    i.ico.ico-about-4
                  .about__block__content
                    .about__block__name No hassle 
                    .about__block__description Mining at home isn’t easy. Faaulty miners, internet connection problems, electricity problems, burnt fuses and breakers, excess heat production, difficult miner settings - not with us!
                      
          .col-sm-3
            .about__image
              img(src="images/mbp.png")
          
    // CTA SEPARATOR
    .separate
      a(href='#').btn.btn-cta register now
            
    // HOW IT WORKS
    .how#sectionHow
      .container
        .row
          .col-sm-12.text-center
            .section-title How it works? 
        .row
          .col-sm-3
            .how__block
              .how__name Register
              .how__description Take few moments to register a new account on BitFire. Don’t forget to confirm your email address
          .col-sm-3
            .how__block
              .how__name Purchase a contract
              .how__description Select contract type and amount of hashpower that suits your needs. You can start small if you want and buy more later
          .col-sm-3
            .how__block
              .how__name Monitor your miner
              .how__description After receiving your payment, mining will start instantly. You will get credited once a day
          .col-sm-3
            .how__block
              .how__name No hussle
              .how__description Just setup your Bitcoin/Ethereum/ZCash wallet and withdraw your mined coins in manner of seconds
                
    // CTA
    .cta#sectionCta.wow.slideInUp
      .container
        .row
          .col-sm-12.text-center
            .section-title.section-title--white Hard Enough ?
            .cta__description Register now to get access to your personal dashboard. It’s compleatly free, without any risk <br> Also, as a new user, you will get free trial hashrate, so you can get familiar with  the mining concepts
            a(href="#").btn.btn-cta register Now !
    
    // PRICING
    .pricing#sectionPricing
      .container
        .row
          .col-sm-12.text-center  
            .section-title Pricing
        .row
          .col-sm-3
            .pricing__block
              
                
    include shared/footer.pug
